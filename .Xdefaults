!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------


Xft.dpi:                    96
Xft.antialias:              false
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt*perl-ext: default,tabbed
URxvt*pastabeTabs: true

URxvt*depth:                32
URxvt*dynamicColors:        on
URxvt*geometry:             90x30
URxvt*transparent:          false
URxvt*fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
! URxvt.loginShell:           true
URxvt*saveLines:            50
URxvt*internalBorder:       3
URxvt*lineSpace:            0

! Fonts
URxvt*font: -*-terminus-medium-r-*-*-20-*-*-*-*-*-iso10646-1
URxvt*boldFont: -*-terminus-bold-r-*-*-20-*-*-*-*-*-iso10646-1

! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt*scrollStyle:          rxvt
URxvt*scrollBar:            false

! Perl extensions
URxvt*perl-ext-common:      default,matcher
URxvt*matcher.button:       1
URxvt*urlLauncher:          chromium-browser

! Cursor
URxvt*cursorBlink:          false
URxvt*cursorColor:          #657b83
URxvt*cursorUnderline:      false

! Pointer
URxvt*pointerBlank:         false
#include "/home/vsh/.xcolors/solarized"
