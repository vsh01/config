!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------


! Xcursor.theme: DMZ-White
! Xcursor.size: 32

Xft.dpi:                    96
Xft.antialias:              false
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

! URxvt*perl-ext: default,tabbed
! URxvt*pastabeTabs: true

URxvt*depth:                32
URxvt*dynamicColors:        on
URxvt*geometry:             90x30
URxvt*transparent:          false
URxvt*fading:               0
URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
! URxvt.loginShell:           true
URxvt*saveLines:            10000
URxvt*internalBorder:       3
URxvt*lineSpace:            0

! Fonts 
URxvt*font: -*-terminus-medium-r-*-*-24-*-*-*-*-*-iso10646-1
URxvt*boldFont: -*-terminus-bold-r-*-*-24-*-*-*-*-*-iso10646-1

! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt*scrollStyle:          rxvt
URxvt*scrollBar:            false

! Perl extensions
URxvt*perl-ext-common:      default,matcher
URxvt*matcher.button:       1
URxvt*url-launcher:          chromium-browser

! Cursor
URxvt*cursorBlink:          false
URxvt*cursorColor:          #657b83
URxvt*cursorUnderline:      false

! Pointer
URxvt*pointerBlank:         false
! #include "/home/vsh/.xcolors/solarized-light"
! #include "/home/vsh/.xcolors/solarized"
#include "/home/vsh/.xcolors/default"
